<div class="container" style="margin-top: 50px;">
    <div class="row">
        <p class="text-end">Usuario: {{user}} <a class="btn btn-danger" href="/admin/login/logout">Cerrar sesion</a></p>
    </div>
    <div class="row">
        <div class="col-7">
            <h3 style="color:white">Listado de Productos</h3>
        </div>
        <div class="col-5 text-end">
            <a class="btn btn-success" href="/admin/productos/nuevo"><i class="fa fa-plus" aria-hidden="true"></i> Agregar</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th style="color: blue; background-color: greenyellow;" scope="col">Id</th>
                        <th style="color: blue; background-color: greenyellow;" scope="col">Descripcion</th>
                        <th style="color: blue; background-color: greenyellow;" scope="col">Cantidad</th>
                        <th style="color: blue; background-color: greenyellow;" scope="col">Precio</th>
                        <th style="color: blue; background-color: greenyellow;" scope="col">Imagen</th>
                        <th style="color: blue; background-color: greenyellow;" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each prod}}
                    <tr>
                        <th scope="row">{{codigo}}</th>
                        <td>{{descripcion}}</td>
                        <td>{{cantidad}}</td>
                        <td>{{precio}}</td>
                        <td>{{{imagen}}}</td>
                        <td class="text-end">
                            <a class="btn btn-secondary" style="background-color: greenyellow;" href="/admin/productos/actualizar/{{codigo}}"><i class="fa fa-pen" style="color: blue; background:greenyellow;" aria-hidden="true"></i></a>
                            <a class="btn btn-secondary" style="background-color: greenyellow;" href="/admin/productos/eliminar/{{codigo}}"><i class="fa fa-trash" style="color: blue; background:greenyellow;" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>